    <record id="action_documentbase_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="documentbase_view_tree"/>
        <field name="act_window_id" ref="action_documentbase_form"/>
    </record>

