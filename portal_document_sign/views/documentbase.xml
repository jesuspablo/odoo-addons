<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- Form view -->
    <record id="view_documentbase_form" model="ir.ui.view">
        <field name="name">view.documentbase.form</field>
        <field name="model">documentbase</field>
        <field name="arch" type="xml">
            <form string="Base Document">
                <sheet>
                    <group>
                        <field name="name">Name</field>
                        <field name="text" widget="html"/>
                        <field name="date_start"/>
                        <field name="date_valid"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Form action -->
    <record id="action_documentbase_form" model="ir.actions.act_window">
        <field name="name">Documentos base</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">documentbase</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id" ref="view_documentbase_filter"/> -->
    </record>
    <!-- Tree view -->
    <record id='documentbase_view_tree' model='ir.ui.view'>
        <field name="name">documentbase.view.tree</field>
        <field name="model">documentbase</field>
        <field name="arch" type="xml">
            <tree string="Base Documents">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_valid"/>
            </tree>
        </field>
    </record>
