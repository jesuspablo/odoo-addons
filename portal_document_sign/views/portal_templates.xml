<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Breadcrumb menu -->
    <template id="portal_menu_agreements"
              name="Portal layout: agreement menu entries"
              inherit_id="portal.portal_breadcrumbs"
              priority="60">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'agreement'" t-attf-class="breadcrumb-item #{'active ' if not agreement else ''}">
                <a t-if="agreement" t-attf-href="/my/agreements?{{ keep_query() }}">Autorizaciones</a>
                <t t-else="">Autorizaciones</t>
            </li>
        </xpath>
    </template>
    <!-- Menu entry in my home -->
    <template id="portal_my_home_agreement" name="Portal My Home : agreements" inherit_id="portal.portal_my_home" priority="50">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="agreement_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Autorizaciones</t>
                <t t-set="url" t-value="'/my/agreements'"/>
                <t t-set="count" t-value="agreement_count"/>
            </t>
        </xpath>
    </template>

    <!-- Lista de autorizaciones en el portal -->
    <template id="portal_my_agreements" name="Mis autorizaciones">
      <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Autorizaciones</t>
        </t>
        <t t-if="not agreements">
            <p>No tienes ninguna autorizaci√≥n firmada ni pendiente de firmar para esta temporada</p>
        </t>
        <t t-if="agreements" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Documento</th>
                    <th/>
                    <th class="text-right">Firmada</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="agreements" t-as="agreement">
                    <tr>
                        <td>
                            <a t-att-href="agreement.get_portal_url()" t-att-title="agreement.name">
                                <t t-esc="agreement.name"/>
                            </a>
                        </td>
                        <td class="tx_status">
                            <t t-if="agreement.signature is False">
                                <span class="badge badge-pill badge-info"><i class="fa fa-fw fa-clock-o" aria-label="Opened" title="Pendiente" role="img"></i><span class="d-none d-md-inline">Pendiente de firmar</span></span>
                            </t>
                            <t t-if="agreement.signature is True">
                                <span class="badge badge-pill badge-success"><i class="fa fa-fw fa-check" aria-label="Paid" title="Firmada" role="img"></i><span class="d-none d-md-inline">Firmada</span></span>
                            </t>
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>
</odoo>
